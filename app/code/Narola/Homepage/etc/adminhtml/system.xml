                    </depends>
                </field>
                <field id="slider_768" translate="label" type="text" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>How many product shown in slider ? (768)</label>                    
                    <depends>
                        <field id="enable">1</field>
                    </depends>
                </field>
                <field id="slider_960" translate="label" type="text" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>How many product shown in slider ? (960)</label>                    
                    <depends>
                        <field id="enable">1</field>
                    </depends>
                </field>
                <field id="slider_1280" translate="label" type="text" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>How many product shown in slider ? (1280)</label>                    
                    <depends>
                        <field id="enable">1</field>
                    </depends>
                </field>                
            </group>
        </section>
    </system>
</config>
